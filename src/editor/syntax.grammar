@top Program { expression* }

@skip { space | LineComment }

expression {
  Identifier |
  String
}

Argument { ("{"  expression* "}") | expression* }

Command { '#' Identifier Argument* }

@tokens {
  Identifier { $[a-zA-Z_\-0-9]+ }

  String { '"' (!["\\] | "\\" _)* '"' }

  LineComment { "//" ![\n]* }

  space { $[ \t\n\r]+ }
}

@detectDelim